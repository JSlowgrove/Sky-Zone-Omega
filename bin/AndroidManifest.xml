<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="skyzoneomega.masteredchaos.js"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />

    <application
        android:icon="@drawable/coin"
        android:label="@string/app_name" >
        <activity
            android:screenOrientation="landscape"
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".StartingPoint"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="skyzoneomega.masteredchaos.js.STARTINGPOINT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".Credits"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="skyzoneomega.masteredchaos.js.CREDITS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".Start"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="skyzoneomega.masteredchaos.js.START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".Scores"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="skyzoneomega.masteredchaos.js.SCORES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".Lost"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="skyzoneomega.masteredchaos.js.LOST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>